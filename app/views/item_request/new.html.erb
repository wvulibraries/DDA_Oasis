<%= form_for :item_request, url: '/submit' do |form| %>
  <% if @item_request.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@item_request.errors.count, "Error") %> </h3> 
      <p> The following prohibited this request from being submitted: </p>
      <ul>
        <% @item_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class="field full">
      <%= form.label :ISBN, 'ISBN:'%> 
      <%= form.text_field :ISBN, size: '100x1'%>
    </div>

    <div class="field full">
      <%= form.label :Facmemb, "Name:" %> 
      <%= form.text_field :Facmemb, value: session['cas']['extra_attributes']['displayName'], readonly: true , size: "100x1"  %>
    </div>

    <div class="field full">
      <%= form.label :intrdisc, "Department:" %> 
      <%= form.text_field :intrdisc, value: session['cas']['extra_attributes']['busoff'], readonly: true, size: "100x1"  %>
    </div>

    <div class="field full">
      <%= form.label :Oemend, "Email:" %>
      <%= form.text_field :Oemend, value: session['cas']['extra_attributes']['mail'], readonly: true, size: "100x1"  %>
    </div>

    <div class="field full">
      <%= form.label :Site, "Pickup Location:"%>
      <%= form.select :Site, options_for_select(["Downtown Campus Library", "Evansdale Library", "George R. Farmer Jr. Law Library", "Health Sciences Library", "Health Sciences Library (Charleston)", "Mary F. Shipper Library", "Institute of Technology, Beckley Campus", "West Virginia & Regional History Center"]), prompt: "Select One", class: 'genForm_dropBox', required: true %><br />
    </div>

    <div class="field full">
      <%= form.label :Role, "University Role:" %>
      <%= form.select :Role, options_for_select(["Faculty", "Undergrad", "Grad", "Staff", "Other"], params[:role]), class: 'genForm_dropBox' %>
    </div>

    <div class="field full">
      <%= form.label :IntNotes, "Note:" %>
      <%= form.text_area :IntNotes, size: "100x10" %>
    </div>  
  </div>

  <%= form.submit "Order Book" %>

<% end  %>