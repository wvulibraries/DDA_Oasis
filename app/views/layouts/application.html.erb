<!DOCTYPE html>
<!-- nagios check -->
<html lang="en">
  <head>
    <title> <%= yield :title %> :: DDA Oasis Form :: WVU </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :head %>
  </head>

  <body>
    <!-- Header -->
    <%= render(:partial => 'shared/header') %> 
    <!-- Main -->
    <main id="main" class="wrapper"> 

      <div class="container">       
        <!-- Flash -->
        <%= render "utilities/alerts" %> 

        <!-- Yield -->
        <div class="app-main-content">
          <%= yield %>
        </div>
      </div>

    </main>

    <!-- Footers -->
    <%= render(:partial => 'shared/builtby_footer') %>

    <!-- JavaScripts -->
    <%= yield :js %>
  </body>
</html>